<div class="container mt-4">
  <div class="row">
    <div class="col-12">
      <div class="d-flex justify-content-between align-items-center mb-3">
        <h1>All Analyzers</h1>
        <%= link_to 'Create New Analyzer', new_analyzer_path, class: 'btn btn-success' %>
      </div>
      <table class="table table-striped">
        <thead>
          <tr>
            <th>ID</th>
            <th>Resume</th>
            <th>Job Description</th>
            <th>Match Score</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
          <% @analyzers.each do |analyzer| %>
            <tr>
              <td><%= analyzer.id %></td>
              <td>
                <div class="scrollable-content">
                  <pre class="bg-light p-3 rounded"><%= analyzer.resume.content.truncate(100) %></pre>
                </div>
              </td>
              <td>
                <div class="scrollable-content">
                  <pre class="bg-light p-3 rounded"><%= analyzer.job_description.content.truncate(100) %></pre>
                </div>
              </td>
              <td><%= analyzer.analysis&.match_score %>%</td>
              <td>
                <%= link_to 'Show', analyzer_path(analyzer), class: 'btn btn-primary' %>
                <%= link_to 'Delete', analyzer_path(analyzer), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
